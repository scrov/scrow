# Define the build command using Docker Compose
build:
    docker-compose build

# Define the run command using Docker Compose
run:
    docker-compose up -d

# Define the stop command using Docker Compose
stop:
    docker-compose down

# Define the push command to push the image to a registry
push:
    docker-compose push

# Define the build command for Python application
build-python:
    make all python

# Define the test command
test:
    # Add test commands here
